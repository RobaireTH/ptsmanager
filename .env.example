#############################
# Environment Configuration #
#############################

# === Security / Auth ===
JWT_SECRET=change-me
ACCESS_TOKEN_TTL=3600
REFRESH_TOKEN_TTL=1209600  # 14 days
AUTH_DEV_MODE=true  # set to false in production to avoid returning tokens in API responses

# === Database ===
DATABASE_URL=sqlite:///./ptsmanager.db

# === CORS / Frontend ===
CORS_ALLOW_ORIGINS=https://your-frontend-domain.vercel.app
FRONTEND_BASE_URL=https://your-frontend-domain.vercel.app

# === SMTP Email (configure for production) ===
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM=no-reply@your-domain.com

# === Optional Feature Flags ===
SEND_PASSWORD_RESET_CONFIRM=true

